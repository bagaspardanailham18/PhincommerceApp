<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyEcommerceApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/background</item>
        <item name="colorPrimaryVariant">@color/background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyle" parent="Theme.MyEcommerceApp">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="dateTextStyle" parent="textViewStyle">
        <item name="android:textColor">#80000000</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="titleText" parent="textViewStyle">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="subtitleText" parent="textViewStyle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="messageText" parent="textViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="bgDetailProduct" parent="">
        <item name="android:background">@color/white</item>
    </style>

    <style name="detailTitleText" parent="textViewStyle">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="detailSubTitleText" parent="textViewStyle">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="circleImageView10" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10%</item>
    </style>

    <style name="sectionBar" parent="detailSubTitleText">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:tag">sticky</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/light_grey</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="NoBackgroundDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

</resources>