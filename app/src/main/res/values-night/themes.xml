<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyEcommerceApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_red</item>
        <item name="colorPrimaryVariant">@color/light_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="textViewStyle" parent="Theme.MyEcommerceApp">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="dateTextStyle" parent="textViewStyle">
        <item name="android:textColor">#80A1A1A1</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="titleText" parent="textViewStyle">
        <item name="android:fontFamily">@font/poppinsbold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="subtitleText" parent="textViewStyle">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="messageText" parent="textViewStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppinssemibold</item>
    </style>

    <style name="bgDetailProduct" parent="">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="detailTitleText" parent="textViewStyle">
        <item name="android:fontFamily">@font/poppinsregular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="detailSubTitleText" parent="textViewStyle">
        <item name="android:fontFamily">@font/poppinsmedium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="sectionBar" parent="detailSubTitleText">
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:padding">14dp</item>
        <item name="android:tag">sticky</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#6C6666</item>
        <item name="colorControlActivated">@color/light_grey</item>
    </style>

</resources>